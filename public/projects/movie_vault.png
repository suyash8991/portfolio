    <rect x="40" y="125" width="160" height="15" fill="#8b5cf6" opacity="0.3"/>

    <!-- Film holes -->
    <circle cx="55" cy="48" r="4" fill="#1c1917"/>
    <circle cx="75" cy="48" r="4" fill="#1c1917"/>
    <circle cx="95" cy="48" r="4" fill="#1c1917"/>
    <circle cx="115" cy="48" r="4" fill="#1c1917"/>
    <circle cx="135" cy="48" r="4" fill="#1c1917"/>
    <circle cx="155" cy="48" r="4" fill="#1c1917"/>
    <circle cx="175" cy="48" r="4" fill="#1c1917"/>
    <circle cx="185" cy="48" r="4" fill="#1c1917"/>

    <circle cx="55" cy="132" r="4" fill="#1c1917"/>
    <circle cx="75" cy="132" r="4" fill="#1c1917"/>
