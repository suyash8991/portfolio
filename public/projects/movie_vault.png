    <circle cx="135" cy="132" r="4" fill="#1c1917"/>
    <circle cx="155" cy="132" r="4" fill="#1c1917"/>
    <circle cx="175" cy="132" r="4" fill="#1c1917"/>
    <circle cx="185" cy="132" r="4" fill="#1c1917"/>

    <!-- Play button -->
    <polygon points="95,70 95,110 130,90" fill="#ec4899" opacity="0.6"/>

    <!-- Security shield (JWT) -->
    <g transform="translate(220, 50)">
      <path d="M 0,0 L 15,0 L 15,25 L 7.5,35 L 0,25 Z" fill="none" stroke="#ec4899" stroke-width="2"/>
      <circle cx="7.5" cy="12" r="3" fill="#ec4899"/>
      <rect x="5.5" y="15" width="4" height="8" fill="#ec4899"/>
    </g>
  </g>

  <!-- Title -->
  <text x="400" y="270" font-family="Arial, sans-serif" font-size="36" font-weight="bold" fill="url(#accentGradient3)" text-anchor="middle">
    Movie Vault
  </text>

  <!-- Subtitle -->
  <text x="400" y="305" font-family="Arial, sans-serif" font-size="18" fill="#94a3b8" text-anchor="middle">
    Keeper of Cinematic Legends
  </text>

  <!-- Tech stack badges -->
  <g transform="translate(160, 340)">
    <rect x="0" y="0" width="110" height="30" rx="15" fill="#8b5cf6" opacity="0.2"/>
    <text x="55" y="20" font-family="Arial, sans-serif" font-size="14" fill="#8b5cf6" text-anchor="middle">Next.js 15</text>

    <rect x="120" y="0" width="110" height="30" rx="15" fill="#ec4899" opacity="0.2"/>
    <text x="175" y="20" font-family="Arial, sans-serif" font-size="14" fill="#ec4899" text-anchor="middle">TypeScript</text>

    <rect x="240" y="0" width="80" height="30" rx="15" fill="#8b5cf6" opacity="0.2"/>
